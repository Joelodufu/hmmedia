<main role="main">
    <input type="hidden" value="{{csrfToken}}">

    {{> default/carousel}}
    <div class="container marketing">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <!-- Blog Post -->
                {{#each posts}}

                <div class="card mb-4">
                    <img class="card-img-top" src="https://placeimg.com/750/300/tech" alt="Card image cap">
                    <div class="card-body">
                        <h2 class="card-title">{{title}}</h2>
                        <p class="card-text">{{description}}</p>
                        <a href="#" class="btn btn-primary">Read More &rarr;</a>
                    </div>
                    <div class="card-footer text-muted">
                        Posted on {{creationDate}} by
                        <a href="#">Admin</a>
                    </div>
                </div>

                {{/each}}
                {{#if login}}
                {{#if admin}}
                <ul class="pagination justify-content-center mb-4">
                    <li class="page-item ">
                        <a class="page-link" href="/logout">&larr; logout</a>
                    </li>
                    <li class="page-item ">
                        <a class="page-link" href="/admin">Profile &rarr;</a>
                    </li>
                </ul>
                {{ else }}
                <ul class="pagination justify-content-center mb-4">
                    <li class="page-item ">
                        <a class="page-link" href="/logout">&larr; logout</a>
                    </li>
                    <li class="page-item ">
                        <a class="page-link" href="/users">Profile &rarr;</a>
                    </li>
                </ul>
                {{/if}}

                {{ else }}

                <ul class="pagination justify-content-center mb-4">
                    <li class="page-item ">
                        <a class="page-link" href="/login">&larr; Login</a>
                    </li>
                    <li class="page-item ">
                        <a class="page-link" href="/register">Register &rarr;</a>
                    </li>
                </ul>

                {{/if}}
                <!-- Pagination -->


            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Search Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Search</h5>
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-secondary disabled" type="button">Go!</button>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Categories</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    {{#each categories}}
                                    <li>
                                        <a href="#">{{title}}</a>
                                    </li>
                                    {{/each}}

                                </ul>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Side Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Important Notice Widget</h5>
                    <div class="card-body">
                        Start The race to becoming a movie Star today. Register for the ongoing Star Quest...
                    </div>
                </div>

            </div>

        </div>
    </div>
</main>
<!-- /.row -->